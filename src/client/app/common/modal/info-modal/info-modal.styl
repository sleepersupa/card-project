.info-modal{
  width 650px
  background-color white
  border-radius 5px
  box-shadow:0 2px 10px black
  & .m-header{
    padding 8px 8px
    font-size sm + 0.3rem
    color #1a1a1a
    font-weight 550
    border-bottom 1px solid grey
    text-align left
  }
  & .m-body{
    padding 7px 8px

  }
  & .m-footer{
    padding 6px 8px
    text-align right
    & button{
      font-size sm
      text-align center
      padding 3px 20px !important
      background-color primary
      color white
      transition all 0.2s ease;
      &:hover{
        //background-color darken(primary,20%)
      }
    }
  }
}