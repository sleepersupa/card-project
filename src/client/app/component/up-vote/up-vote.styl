.up-vote{
  min-width 80px;

  &.flex-row{
    justify-content center;
  }
  &.flex-column{
    align-items center;
  }
  .votes{
    height 24px;
    line-height 24px;
    padding 0 5px;
    min-width 30px;
  }
  .arrow{
    color #acacac;
    cursor pointer;
  }
  .arrow-up{
    transform rotate(-90deg)
  }
  .arrow-down{
    transform rotate(90deg);
  }
}