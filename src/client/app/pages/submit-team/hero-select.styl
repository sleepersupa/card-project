.hero-select{
  width 100%;
  padding 10px 0 ;
  display flex;
  flex-direction row;
  flex-wrap wrap;
  position relative;
  .hero-wrap{
    position relative;
    img{
      width 50px;
      padding-right 5px
      padding-bottom 5px;
      border-radius 10px;
      max-height 50px;
    }
    .fa-trash-alt{
      position absolute;
      top: -6px;
      right: -10px;
      font-size 16px;
      color red;
    }
  }

  .error-text {
    color red;
    font-size 12px;
    bottom 0;
    left 50%;
    transform translate(-50%, 0);
    position absolute;
  }
}